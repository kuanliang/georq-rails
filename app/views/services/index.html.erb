<div class="col-md-12">
  <div class="service">
    <h1>喬治亞服務項目</h1>
    <%= link_to("New service", new_service_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>種類</td>
        <td>名稱</td>
        <td>簡寫</td>
        <td>描述</td>
      </tr>
    </thead>
    <tbody>
      <% @services.each do |service| %>
        <tr>
          <td>#</td>
          <td><%= service.kind %></td>
          <td><%= service.name %></td>
          <td><%= service.alias %></td>

          <td><%#= service.desctiption %></td>
          <td>        
              <%= link_to("Edit", edit_service_path(service), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", service_path(service),    class: "btn btn-sm btn-default", 
                          method: :delete, data: { confirm: "Are you sure?" } )%>
                    </td>
        </tr>
      <% end %>

       <%# @posts.each do |post| %>
      <%# end %>

    </tbody>
  </table>
</div>