<%= simple_form_for company do |f| %>
  <div class="form-company">
    <%= f.input :company_name, input_html: { class: "form-control"} %>
    <%= f.input :company_address, input_html: { class: "form-control"} %>
    <%= f.input :company_tel, input_html: { class: "form-control"} %>
    <%= f.input :company_fax, input_html: { class: "form-control"} %>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>
<% end %>
