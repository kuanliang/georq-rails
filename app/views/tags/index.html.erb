<div class="col-md-12">
  <div class="item">
    <%= link_to("新增標籤", new_tag_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>


      <tr>
        <td>#</td>
        <td>id</td>
        <td>標籤名稱</td>
      </tr>
    </thead>
    <tbody>
      <% @tags.each do |tag| %>
        <tr>
          <td>#</td> 
          <td><%= tag.id %><%#=  %></td>
          <td><%= tag.tag_name%></td>
          <td>
            <%# if group.editable_by?(current_user) %>
              <%= link_to("Edit", edit_tag_path(tag), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", tag_path(tag),    class: "btn btn-sm btn-default", 
                          method: :delete, data: { confirm: "Are you sure?" } )%>
            <%# end %>
          </td>
        </tr>
      <% end %>

       <%# @posts.each do |post| %>
      <%# end %>

    </tbody>
  </table>
</div>